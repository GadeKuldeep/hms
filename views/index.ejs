<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Management System</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
            scroll-behavior: smooth;
        }

        body {
            background: linear-gradient(to bottom, #f3eaff, #d5bfff);
            color: #333;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #6A5ACD;
            padding: 15px 50px;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 100;
            transition: 0.3s;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        .logo {
            font-size: 26px;
            font-weight: bold;
            color: #fff;
            transition: 0.3s;
        }

        .nav-links {
            display: flex;
            list-style: none;
        }

        .nav-links li {
            margin: 0 15px;
        }

        .nav-links a {
            text-decoration: none;
            font-size: 18px;
            color: white;
            font-weight: bold;
            transition: 0.3s;
        }

        .nav-links a:hover {
            color: yellow;
        }

        .login-btn {
            background: yellow;
            color: black;
            border: none;
            padding: 10px 18px;
            font-size: 16px;
            border-radius: 25px;
            cursor: pointer;
            transition: 0.3s;
            font-weight: bold;
        }

        .login-btn:hover {
            background: #ffd700;
            transform: scale(1.1);
        }

        .hero {
            height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            text-align: center;
            padding: 100px 20px;
        }

        .hero h1 {
            font-size: 50px;
            font-weight: bold;
            color: #6A5ACD;
            animation: fadeIn 1.5s ease-in-out;
        }

        .hero p {
            font-size: 20px;
            margin-top: 10px;
            color: #555;
            animation: slideUp 1s ease-in-out;
        }

        .search-container {
            text-align: center;
            margin: 30px 0;
        }

        .search-container input {
            width: 50%;
            padding: 12px;
            font-size: 18px;
            border: 2px solid #6A5ACD;
            border-radius: 25px;
            outline: none;
            transition: 0.3s;
        }

        .search-container input:focus {
            transform: scale(1.05);
            border-color: yellow;
        }


        .table-container {
            width: 90%;
            margin: auto;
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            overflow-x: auto;
            animation: fadeIn 1.2s ease-in-out;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        th {
            background: #6A5ACD;
            color: white;
        }

        tr:hover {
            background: #f3f1ff;
            transition: 0.3s;
        }

        footer {
            background: #6A5ACD;
            color: white;
            text-align: center;
            padding: 20px;
            margin-top: 30px;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 768px) {
            nav {
                flex-direction: column;
                padding: 15px;
                text-align: center;
            }

            .nav-links {
                flex-direction: column;
                margin-top: 10px;
            }

            .nav-links li {
                margin-bottom: 10px;
            }

            .search-container input {
                width: 80%;
            }
        }
    </style>
</head>

<body>

    <nav>
        <div class="logo">HMS</div>
        <ul class="nav-links">
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
        <a href="/login">
            <button class="login-btn">Login / Sign Up</button>
        </a>
    </nav>

    <div class="hero">
        <h1>Hospital Management System</h1>
        <p>Your health, our priority.</p>
    </div>


    <div class="search-container">
        <input type="text" id="search" placeholder="Enter the hospital name...">
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Hospital Name</th>
                    <th>Patients</th>
                    <th>Beds Available</th>
                    <th>Doctors Available</th>
                </tr>
            </thead>
            <tbody id="hospital-table">

            </tbody>
        </table>
    </div>


    <footer>
        <p>Managing hospitals efficiently with technology.</p>
    </footer>

    <script>
        const hospitals = [
            { name: "City Hospital", patients: 150, beds: 50, doctors: 20 },
            { name: "Apollo Clinic", patients: 200, beds: 80, doctors: 35 },
            { name: "Sunshine Care", patients: 120, beds: 30, doctors: 15 },
            { name: "Global Medical", patients: 180, beds: 60, doctors: 28 },
            { name: "Green Valley Hospital", patients: 170, beds: 55, doctors: 22 },
            { name: "Metro Health", patients: 210, beds: 75, doctors: 32 },
            { name: "Summit Healthcare", patients: 190, beds: 65, doctors: 27 },
            { name: "Lakeside Hospital", patients: 160, beds: 50, doctors: 20 },
            { name: "Everest Medical", patients: 220, beds: 85, doctors: 38 },
            { name: "Hope Clinic", patients: 140, beds: 45, doctors: 18 },
            { name: "Golden Care Hospital", patients: 130, beds: 40, doctors: 16 },
            { name: "Pinecrest Medical", patients: 155, beds: 48, doctors: 19 },
            { name: "Starlight Hospital", patients: 180, beds: 60, doctors: 26 },
            { name: "Silverline Healthcare", patients: 200, beds: 70, doctors: 30 },
            { name: "New Horizon Clinic", patients: 175, beds: 55, doctors: 22 },
            { name: "Grandview Hospital", patients: 195, beds: 72, doctors: 29 },
            { name: "Tranquil Care", patients: 145, beds: 50, doctors: 21 },
            { name: "Skyline Health", patients: 225, beds: 90, doctors: 40 },
            { name: "Oceanview Medical", patients: 165, beds: 58, doctors: 23 },
            { name: "Central General Hospital", patients: 210, beds: 80, doctors: 34 }
        ];

        const tableBody = document.getElementById("hospital-table");

        function loadTableData() {
            tableBody.innerHTML = "";
            hospitals.forEach(hospital => {
                const row = `<tr>
                    <td>${hospital.name}</td>
                    <td>${hospital.patients}</td>
                    <td>${hospital.beds}</td>
                    <td>${hospital.doctors}</td>
                </tr>`;
                tableBody.innerHTML += row;
            });
        }

        document.getElementById("search").addEventListener("input", function () {
            const query = this.value.toLowerCase();
            tableBody.innerHTML = "";
            hospitals.forEach(hospital => {
                if (hospital.name.toLowerCase().includes(query)) {
                    const row = `<tr><td>${hospital.name}</td><td>${hospital.patients}</td><td>${hospital.beds}</td><td>${hospital.doctors}</td></tr>`;
                    tableBody.innerHTML += row;
                }
            });
        });

        loadTableData();
    </script>

</body>

</html>