<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Management System</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
            scroll-behavior: smooth;
        }

        body {
            background: linear-gradient(to bottom, #f3eaff, #d5bfff);
            color: #333;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #6A5ACD;
            padding: 15px 50px;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 100;
            transition: 0.3s;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 26px;
            font-weight: bold;
            color: #fff;
            transition: 0.3s;
        }

        .logo img {
            height: 40px;
            width: auto;
            object-fit: contain;
        }

        .nav-links {
            display: flex;
            list-style: none;
        }

        .nav-links li {
            margin: 0 15px;
        }

        .nav-links a {
            text-decoration: none;
            font-size: 18px;
            color: white;
            font-weight: bold;
            transition: 0.3s;
        }

        .nav-links a:hover {
            color: yellow;
        }

        .login-btn {
            background: yellow;
            color: black;
            border: none;
            padding: 10px 18px;
            font-size: 16px;
            border-radius: 25px;
            cursor: pointer;
            transition: 0.3s;
            font-weight: bold;
        }

        .login-btn:hover {
            background: #ffd700;
            transform: scale(1.1);
        }

        .hero {
            height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            text-align: center;
            padding: 100px 20px;
            position: relative;
            overflow: hidden;
        }

        .background-slideshow {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

        .slide {
            position: absolute;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            opacity: 0;
            transition: opacity 1.5s ease-in-out;
            filter: blur(8px);
            background-color: rgba(106, 90, 205, 0.3);
            background-blend-mode: multiply;
        }

        .slide.active {
            opacity: 1;
        }

        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 800px;
            padding: 20px;
        }

        .hero h1 {
            font-size: 50px;
            font-weight: bold;
            color: #2e2662;
            animation: fadeIn 1.5s ease-in-out;
        }

        .hero p {
            font-size: 20px;
            margin-top: 10px;
            color: #000000;
            animation: slideUp 1s ease-in-out;
        }

        .search-container {
            text-align: center;
            margin: 30px 0;
        }

        .search-container input {
            width: 50%;
            padding: 12px;
            font-size: 18px;
            border: 2px solid #6A5ACD;
            border-radius: 25px;
            outline: none;
            transition: 0.3s;
        }

        .search-container input:focus {
            transform: scale(1.05);
            border-color: yellow;
        }

        .table-container {
            width: 90%;
            margin: auto;
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            overflow-x: auto;
            animation: fadeIn 1.2s ease-in-out;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        th {
            background: #6A5ACD;
            color: white;
        }

        tr:hover {
            background: #f3f1ff;
            transition: 0.3s;
        }

        footer {
            background: #6A5ACD;
            color: white;
            padding: 30px 10px;
            text-align: center;
            margin-top: 50px;
        }

        .footer-container {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            max-width: 900px;
            margin: auto;
        }

        .footer-info {
            margin: 10px;
        }

        .footer-info h3 {
            margin-bottom: 10px;
            color: #f8f6ff;
        }

        .footer-info p {
            font-size: 14px;
        }

        .footer-info a {
            color: white;
            text-decoration: none;
            transition: 0.3s;
        }

        .footer-info a:hover {
            text-decoration: underline;
        }

        .footer-bottom {
            margin-top: 20px;
            font-size: 14px;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 0.5;
                transform: translateY(0);
            }
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 480px) {
            .logo {
                font-size: 20px;
                flex-direction: column;
                gap: 5px;
            }

            .logo img {
                height: 30px;
            }
        }

        @media (max-width: 768px) {
            .footer-container {
                flex-direction: column;
                text-align: center;
            }

            nav {
                flex-direction: column;
                padding: 15px;
                text-align: center;
            }

            .logo {
                font-size: 22px;
                justify-content: center;
                gap: 10px;
            }

            .logo img {
                height: 35px;
            }

            .nav-links {
                flex-direction: column;
                margin-top: 10px;
            }

            .nav-links li {
                margin-bottom: 10px;
            }

            .search-container input {
                width: 80%;
            }

            .hero {
                height: 60vh;
                padding: 60px 20px;
            }

            .slide {
                filter: blur(4px);
            }

            .hero h1 {
                font-size: 36px;
            }

            .hero p {
                font-size: 18px;
            }
        }
    </style>
</head>

<body>
    <nav>
        <div class="logo">
            <img src="/favicon.ico" alt="HMS Logo">
            <span>HMS</span>
        </div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
        <a href="/login">
            <button class="login-btn">Login / Sign Up</button>
        </a>
    </nav>

    <div class="hero">
        <div class="background-slideshow">
            <div class="slide" style="background-image: url('https://images.unsplash.com/photo-1576091160550-2173dba999ef?auto=format&fit=crop&w=1920&q=80')"></div>
            <div class="slide" style="background-image: url('https://images.unsplash.com/photo-1584432810601-6c7f27d2362b?auto=format&fit=crop&w=1920&q=80')"></div>
            <div class="slide" style="background-image: url('https://images.unsplash.com/photo-1589810264340-0ce27bfbf751?auto=format&fit=crop&w=1920&q=80')"></div>
        </div>
        <div class="hero-content">
            <h1>Hospital Management System</h1>
            <p>Your health, our priority.</p>
        </div>
    </div>

    <div class="search-container">
        <input type="text" id="search" placeholder="Enter the hospital name...">
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Hospital Name</th>
                    <th>Patients</th>
                    <th>Beds Available</th>
                    <th>Doctors Available</th>
                </tr>
            </thead>
            <tbody id="hospital-table">

            </tbody>
        </table>
    </div>

    <footer>
        <div class="footer-container">
            <div class="footer-info">
                <h3>Contact Us</h3>
                <p>üìç 123 Health St, City, Country</p>
                <p>üìû +1 234 567 890</p>
                <p>‚úâ contact@hospital.com</p>
            </div>

            <div class="footer-info">
                <h3>Quick Links</h3>
                <p><a href="/">üè† Home</a></p>
                <p><a href="/contact">üìû Contact</a></p>
                <p><a href="/about">‚ùì About</a></p>
            </div>

            <div class="footer-info">
                <h3>Operating Hours</h3>
                <p>üïí Mon-Fri: 8:00 AM - 8:00 PM</p>
                <p>üïí Sat-Sun: 10:00 AM - 5:00 PM</p>
                <p>üöë 24/7 Emergency Services</p>
            </div>
        </div>

        <p class="footer-bottom">¬© 2025 Hospital Name | All Rights Reserved</p>
    </footer>

    <script>
        // Background slideshow functionality
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        
        function showNextSlide() {
            slides[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + 1) % slides.length;
            slides[currentSlide].classList.add('active');
        }

        // Initialize slideshow
        slides[0].classList.add('active');
        setInterval(showNextSlide, 5000);

        // Preload images for smoother transitions
        window.addEventListener('load', () => {
            const images = [
                'https://images.unsplash.com/photo-1576091160550-2173dba999ef?auto=format&fit=crop&w=1920&q=80',
                'https://images.unsplash.com/photo-1584432810601-6c7f27d2362b?auto=format&fit=crop&w=1920&q=80',
                'https://images.unsplash.com/photo-1589810264340-0ce27bfbf751?auto=format&fit=crop&w=1920&q=80'
            ];
            
            images.forEach(url => {
                new Image().src = url;
            });
        });

        // Original table functionality
        const hospitals = [
            { name: "City Hospital", patients: 150, beds: 50, doctors: 20 },
            { name: "Apollo Clinic", patients: 200, beds: 80, doctors: 35 },
            // ... (keep your existing hospital data array)
        ];

        const tableBody = document.getElementById("hospital-table");

        function loadTableData() {
            tableBody.innerHTML = "";
            hospitals.forEach(hospital => {
                const row = `<tr>
                    <td>${hospital.name}</td>
                    <td>${hospital.patients}</td>
                    <td>${hospital.beds}</td>
                    <td>${hospital.doctors}</td>
                </tr>`;
                tableBody.innerHTML += row;
            });
        }

        document.getElementById("search").addEventListener("input", function () {
            const query = this.value.toLowerCase();
            tableBody.innerHTML = "";
            hospitals.forEach(hospital => {
                if (hospital.name.toLowerCase().includes(query)) {
                    const row = `<tr>
                        <td>${hospital.name}</td>
                        <td>${hospital.patients}</td>
                        <td>${hospital.beds}</td>
                        <td>${hospital.doctors}</td>
                    </tr>`;
                    tableBody.innerHTML += row;
                }
            });
        });

        loadTableData();
    </script>
</body>
</html>